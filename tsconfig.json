{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es5",
    "paths": {
      "Components/*": ["src/components/*"],
      "Root/*": ["src/*"],
      "Types": ["src/types/index.ts"],
      "Store/*": ["src/store/*"],
      "Http": ["src/http/http-service.ts"],
      "Utils/*": ["src/utils/*"],
      "Assets/*": ["src/assets/*"],
    },

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowJs": true
  },
  "include": ["src/**/*"]
}
